{
  "name": "retro-game-ide-vue",
  "version": "1.0.0",
  "description": "IDE para desarrollo de juegos retro en C con Vue.js + Electron",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "webpack --mode=production",
    "dev:renderer": "webpack serve --mode=development",
    "setup": "npm install && echo Setup complete!"
  },
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "vue-loader": "^17.2.2",
    "@vue/compiler-sfc": "^3.3.4",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "html-webpack-plugin": "^5.5.3"
  },
  "dependencies": {
    "vue": "^3.3.4",
    "monaco-editor": "^0.34.0",
    "monaco-editor-webpack-plugin": "^7.1.0"
  },
  "build": {
    "appId": "com.retrogameide.vue.app",
    "productName": "Retro Game IDE Vue",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main.js",
      "dist/**/*",
      "examples/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
